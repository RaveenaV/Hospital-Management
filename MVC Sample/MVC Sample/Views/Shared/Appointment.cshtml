@model  MVC_Sample.Models.StaffDetails
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="body-content container col-md-9">
		<div class="page-header">
			<h4>Patient Appointment</h4>
		</div>
		<div class="form-horizontal">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group">
				@Html.Label("Choose Doctor", htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
						@Html.DropDownListFor(model=>model.StaffName, new SelectList("Staff Name",Model.StaffKey,Model.StaffName),new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
		</div>
	</div>
}
